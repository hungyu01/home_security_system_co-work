<!DOCTYPE html>
<html>
<head>
  <title>家庭智慧監控系統</title>
  <link rel="stylesheet" href="https://cdn.bootcdn.net/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.css">
  <script src="/socket.io/socket.io.js"></script>
  <style>
    #video-container {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    #video {
      max-width: 100%;
      max-height: 100%;
    }
  </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-lg-8 col-lg-offset-2">
                <h2>室內監控系統</h2>
                <div class="row text-right">
                    <div class="col-xs-6 text-left">
                        <button class="btn btn-primary">
                            <a href="/homepage" style="color: white; text-decoration: none;">回首頁</a>
                        </button>
                    </div>
                    <div class="col-xs-6 text-right">
                        <form action="/logout" method="post">
                            <button class="btn btn-danger">登出</button>
                        </form>
                    </div>
                </div>
                <hr>
                <div id="video-container">
                  <img id="video" alt="Live Stream">
                </div>
            </div>
        </div>
    </div>

    <script>
      const ws = new WebSocket('ws://localhost:4000'); // 使用 WebSocket 連接服務器
  
      ws.onopen = function(event) {
        console.log('WebSocket connection established');
      };
  
      ws.onmessage = function(event) {
        const img = document.getElementById('video');
        img.src = 'data:image/jpeg;base64,' + event.data;
      };
  
      ws.onclose = function(event) {
        console.log('WebSocket connection closed');
      };
  
      ws.onerror = function(event) {
        console.error('WebSocket error:', event);
      };
    </script>
</body>
</html>
